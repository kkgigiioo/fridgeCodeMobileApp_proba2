<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="#393e46">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/detailItem">

        <TextView
            android:id="@+id/detailNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"  />

        <TextView
            android:id="@+id/barcodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="TextView"
            android:textColor="@color/wordLight"
            app:layout_constraintTop_toBottomOf="@id/detailNameTV"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/expirTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/barcodeTV"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView

            android:id="@+id/detailBrandTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/expirTV"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/detailBrandTV"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/numOfItemTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/locationTV"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/unitTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/numOfItemTV"
            android:text="TextView"
            android:textColor="@color/wordLight"
            android:gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/delItemDetailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_delete_item"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_rounded_corners"
            android:textColor="@android:color/white"
            android:alpha="77"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>